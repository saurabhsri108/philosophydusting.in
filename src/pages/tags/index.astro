---
import Layout from "../../layouts/Layout.astro";
const allBlogs = await Astro.glob("../blogs/*.md");
const tags = [...new Set(allBlogs.map((blog) => blog.frontmatter.tags).flat())];
---

<Layout title="Tags Page">
  <div>
    {
      tags.map((tag) => (
        <p>
          <a href={`/tags/${tag}`}>{tag}</a>
        </p>
      ))
    }
  </div>
</Layout>
<style>
  a {
    color: #00539f;
  }

  div {
    display: flex;
    flex-wrap: wrap;
  }

  p {
    margin: 0.25em;
    border: dotted 1px #a1a1a1;
    border-radius: 0.5em;
    padding: 0.5em 1em;
    font-size: 1.15em;
    background-color: #f8fcfd;
  }
</style>
